<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jsheng.fulltonormaldemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FullScreenActivity"
            android:label="@string/full"
            android:theme="@style/AppTheme.Full"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Normal0Activity"
            android:label="Normal0Activity"
            android:screenOrientation="portrait" />
        <activity android:name=".Normal1Activity"
            android:label="Normal1Activity"
            android:screenOrientation="portrait" />
        <activity android:name=".Normal2Activity"
            android:label="Normal2Activity"
            android:screenOrientation="portrait" />
        <activity android:name=".ProblemActivity"
            android:label="Normal3Activity"
            android:screenOrientation="portrait" />
    </application>

</manifest>